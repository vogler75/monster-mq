# Input type for Device Configuration Import
# Accepts the same fields as the Device output type to allow importing exported files
input DeviceInput {
    # Unique device name (required)
    name: String!
    # Device namespace for MQTT topics (required)
    namespace: String!
    # Cluster node assignment (required)
    nodeId: String!
    # Device-specific configuration as JSON (optional - can be empty object)
    config: JSON
    # Whether the device is enabled (will be ignored - always imported as disabled)
    enabled: Boolean
    # Device type (OPCUA_CLIENT, MQTT_CLIENT, MQTT_SERVER, KAFKA_CLIENT, etc)
    type: String
    # When the device was created (ignored on import - will be set to current time)
    createdAt: String
    # When the device was last updated (ignored on import - will be set to current time)
    updatedAt: String
}

# Extend Mutations for Device Management
extend type Mutation {
    # Import devices from a list of Device configurations
    # Supports bulk import of device configurations for backup restoration or migration
    # All imported devices are automatically set to enabled=false for safety
    # Returns import result with statistics and any errors
    importDevices(
        # Array of device configurations to import
        configs: [DeviceInput!]!
    ): ImportDeviceConfigResult!
}

# Result type for Device Configuration Import
type ImportDeviceConfigResult {
    # Whether the import operation succeeded (at least one config imported)
    success: Boolean!
    # Number of successfully imported configurations
    imported: Int!
    # Number of configurations that failed to import
    failed: Int!
    # Total number of configurations in the import request
    total: Int!
    # Array of error messages for failed imports
    errors: [String!]!
}

# Result type for JDBC Logger operations
type JDBCLoggerResult {
    # Whether the operation succeeded
    success: Boolean!
    # The affected JDBC Logger (null if operation failed)
    logger: JDBCLogger
    # Error messages if operation failed
    errors: [String!]!
}

# Input for JDBC Logger configuration
input JDBCLoggerConfigInput {
    # Database type (QuestDB, PostgreSQL, TimescaleDB)
    databaseType: JDBCLoggerDatabaseType!
    # JDBC connection URL (e.g., "jdbc:questdb:http://localhost:9000")
    jdbcUrl: String!
    # Database username
    username: String!
    # Database password (optional when editing existing logger - leave blank to keep current password)
    password: String
    # MQTT topic filters to subscribe to (supports wildcards +, #)
    topicFilters: [String!]!
    # Fixed table name (mutually exclusive with tableNameJsonPath)
    tableName: String
    # JSONPath to extract table name from payload (e.g., "$.metadata.table")
    tableNameJsonPath: String
    # Column name for MQTT topic (optional - if set, topic name is included in inserts)
    topicNameColumn: String
    # Payload format (JSON or XML)
    payloadFormat: JDBCLoggerPayloadFormat = JSON
    # JSON Schema for validation and field extraction
    jsonSchema: JSON!
    # Queue type (MEMORY or DISK)
    queueType: JDBCLoggerQueueType = MEMORY
    # Maximum buffered messages
    queueSize: Int = 10000
    # Path for disk queue files
    diskPath: String = "./buffer"
    # JDBC batch size
    bulkSize: Int = 1000
    # Maximum time to collect bulk in milliseconds
    bulkTimeoutMs: Long = 5000
    # Delay before reconnecting on failure in milliseconds
    reconnectDelayMs: Long = 5000
    # Automatically create table if it doesn't exist (only works with fixed table name)
    autoCreateTable: Boolean = true
    # Database-specific configuration (JSON object for database-specific settings)
    # For Snowflake: {privateKeyFile, account, url, role, scheme, port, database, schema}
    dbSpecificConfig: JSON
}

# Input for creating or updating a JDBC Logger
input JDBCLoggerInput {
    # Unique logger name across the cluster
    name: String!
    # MQTT namespace for internal communication (e.g., "jdbc/logger1")
    namespace: String!
    # Target cluster node (use "*" for automatic assignment)
    nodeId: String!
    # Whether the logger should be enabled
    enabled: Boolean = true
    # Connection and validation configuration
    config: JDBCLoggerConfigInput!
}
