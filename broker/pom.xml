        <!-- Neo4j Java Driver for graph database integration -->
        <dependency>
            <groupId>org.neo4j.driver</groupId>
            <artifactId>neo4j-java-driver</artifactId>
            <version>5.14.0</version>
        </dependency>

        <!-- JSON Schema Validation for JDBC Logger -->
        <dependency>
            <groupId>com.github.erosb</groupId>
            <artifactId>everit-json-schema</artifactId>
            <version>1.14.4</version>
        </dependency>

        <!-- JSONPath for dynamic field extraction in JDBC Logger -->
        <dependency>
            <groupId>com.jayway.jsonpath</groupId>
            <artifactId>json-path</artifactId>
            <version>2.9.0</version>
        </dependency>

        <!-- GraalVM Polyglot API for Flow Engine (JavaScript + Python) -->
        <!-- GraalJS and GraalPy are included as Maven dependencies for ease of deployment -->
        <!-- Updated to version 25.0.0 to match GraalVM JDK 25 for optimal performance -->
        <dependency>
            <groupId>org.graalvm.polyglot</groupId>
            <artifactId>polyglot</artifactId>
            <version>25.0.0</version>
        </dependency>

        <!-- GraalVM JavaScript (GraalJS) -->
        <!-- Note: Changed from js-community to js (new artifact name in v25) -->
        <dependency>
            <groupId>org.graalvm.polyglot</groupId>
            <artifactId>js</artifactId>
            <version>25.0.0</version>
            <type>pom</type>
        </dependency>

    </dependencies>

</project>