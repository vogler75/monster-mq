            <groupId>com.github.f4b6a3</groupId>
            <artifactId>uuid-creator</artifactId>
            <version>6.0.0</version>
        </dependency>

        <!-- Hazelcast JCache Integration -->
        <dependency>
            <groupId>javax.cache</groupId>
