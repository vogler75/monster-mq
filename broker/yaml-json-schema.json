{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "TCP": {
      "type": "integer",
      "default": 1883
    },
    "SSL": {
      "type": "boolean",
      "default": false
    },
    "WS": {
      "type": "integer",
      "default": 0
    },
    "MaxMessageSizeKb": {
      "type": "integer",
      "default": 8
    },
    "Kafka": {
      "type": "object",
      "properties": {
        "Servers": {
          "type": "string"
        },
        "Bus": {
          "type": "object",
          "default": false,
          "Enabled": {
            "type": "boolean",
            "default": false
          },
          "Topic": {
            "type": "string",
            "default": "monster"
          }
        }
      },
      "required": [
        "Servers"
      ]
    },
    "SessionStoreType": {
      "type": "string",
      "enum": [
        "POSTGRES",
        "CRATEDB"
      ]
    },
    "RetainedStoreType": {
      "type": "string",
      "enum": [
        "MEMORY",
        "HAZELCAST",
        "POSTGRES",
        "CRATEDB"
      ]
    },
    "ArchiveGroups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string"
          },
          "Enabled": {
            "type": "boolean"
          },
          "TopicFilter": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "RetainedOnly": {
            "type": "boolean"
          },
          "LastValType": {
            "type": "string",
            "enum": [
              "NONE",
              "MEMORY",
              "HAZELCAST",
              "POSTGRES",
              "CRATEDB"
            ]
          },
          "ArchiveType": {
            "type": "string",
            "enum": [
              "NONE",
              "POSTGRES",
              "CRATEDB",
              "KAFKA"
            ]
          }
        },
        "required": [
          "Name",
          "Enabled",
          "TopicFilter",
          "RetainedOnly",
          "LastValType",
          "ArchiveType"
        ]
      }
    },
    "Postgres": {
      "type": "object",
      "properties": {
        "Url": {
          "type": "string"
        },
        "User": {
          "type": "string"
        },
        "Pass": {
          "type": "string"
        }
      },
      "required": [
        "Url",
        "User",
        "Pass"
      ]
    },
    "CrateDB": {
      "type": "object",
      "properties": {
        "Url": {
          "type": "string"
        },
        "User": {
          "type": "string"
        },
        "Pass": {
          "type": "string"
        }
      },
      "required": [
        "Url",
        "User",
        "Pass"
      ]
    }
  },
  "required": [
    "Port",
    "SSL",
    "WS",
    "TCP"
  ]
}