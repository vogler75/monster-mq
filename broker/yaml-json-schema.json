{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Port": {
      "type": "integer",
      "default": 1883
    },
    "SSL": {
      "type": "boolean",
      "default": false
    },
    "WS": {
      "type": "boolean",
      "default": false
    },
    "TCP": {
      "type": "boolean",
      "default": true
    },
    "Kafka": {
      "type": "object",
      "properties": {
        "Enabled": {
          "type": "boolean",
          "default": false
        },
        "Servers": {
          "type": "string"
        },
        "Topic": {
          "type": "string"
        }
      },
      "required": [
        "Servers",
        "Topic"
      ]
    },
    "RetainedMessages": {
      "type": "object",
      "properties": {
        "StoreType": {
          "type": "string",
          "enum": [
            "MEMORY",
            "POSTGRES",
            "HAZELCAST"
          ]
        },
        "ArchiveType": {
          "type": "string",
          "enum": [
            "NONE",
            "POSTGRES"
          ]
        }
      }
    },
    "LastValueMessages": {
      "type": "object",
      "properties": {
        "TopicFilter": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "StoreType": {
          "type": "string",
          "enum": [
            "NONE",
            "MEMORY",
            "POSTGRES",
            "HAZELCAST"
          ]
        },
        "ArchiveType": {
          "type": "string",
          "enum": [
            "NONE",
            "POSTGRES"
          ]
        }
      }
    },
    "SessionStoreType": {
      "type": "string",
      "enum": [
        "POSTGRES"
      ]
    },
    "Postgres": {
      "type": "object",
      "properties": {
        "Url": {
          "type": "string"
        },
        "User": {
          "type": "string"
        },
        "Pass": {
          "type": "string"
        }
      },
      "required": [
        "Url",
        "User",
        "Pass"
      ]
    }
  },
  "required": [
    "Port",
    "SSL",
    "WS",
    "TCP"
  ]
}