{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Port": {
      "type": "integer",
      "default": 1883
    },
    "SSL": {
      "type": "boolean",
      "default": false
    },
    "WS": {
      "type": "boolean",
      "default": false
    },
    "TCP": {
      "type": "boolean",
      "default": true
    },
    "Kafka": {
      "type": "object",
      "properties": {
        "Servers": {
          "type": "string"
        },
        "Topic": {
          "type": "string"
        }
      },
      "required": ["Servers", "Topic"]
    },
    "RetainedMessageStoreType": {
      "type": "string",
      "enum": ["MEMORY", "POSTGRES", "HAZELCAST"]
    },
    "SubscriptionTableType": {
      "type": "string",
      "enum": ["MEMORY", "POSTGRES"]
    },
    "Postgres": {
      "type": "object",
      "properties": {
        "Url": {
          "type": "string"
        },
        "User": {
          "type": "string"
        },
        "Pass": {
          "type": "string"
        }
      },
      "required": ["Url", "User", "Pass"]
    }
  },
  "required": ["Port", "SSL", "WS", "TCP", "RetainedMessageStoreType", "SubscriptionTableType"]
}